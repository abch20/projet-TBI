import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

orders = pd.read_csv("Orders.csv")
customers = pd.read_csv("Customers.csv")

import pyodbc

conn = pyodbc.connect(
    "DRIVER={SQL Server};"
    "SERVER=localhost;"
    "DATABASE=Northwind;"
    "Trusted_Connection=yes;"
)

orders = pd.read_sql("SELECT * FROM Orders", conn)


orders['ShippedDate'] = pd.to_datetime(orders['ShippedDate'])
orders['OrderDate'] = pd.to_datetime(orders['OrderDate'])

orders['Delivered'] = orders['ShippedDate'].notna()


orders['Year'] = orders['OrderDate'].dt.year
orders['Month'] = orders['OrderDate'].dt.month


kpi = orders.groupby('Year').agg(
    Total_Orders=('OrderID', 'count'),
    Delivered_Orders=('Delivered', 'sum')
)

kpi['Delivery_Rate'] = kpi['Delivered_Orders'] / kpi['Total_Orders']
kpi

plt.figure()
sns.lineplot(data=kpi, x=kpi.index, y='Total_Orders')
plt.title("Orders by Year")
plt.show()

kpi.to_csv("kpi_orders.csv", index=True)
